<%= render 'shared/page_title', title: "All Chefs" %>
<%= will_paginate %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h3><em>Chefs:</em></h3>
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= link_to gravatrar_for(chef, size: 200), chefs_path(chef) %>
        <p>
          <h5>Chef name: <%= chef.chefname %></h5>
        </p>
    </div>
  <div/>
<% end %>